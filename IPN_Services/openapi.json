              }
            }
          },
          "400" : {
            "description" : "failed",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "string"
                }
              }
            }
          }
        }
      }
    },
    "/receiver/addBalance" : {
      "summary" : "API to add amount to the receiver account",
      "put" : {
        "summary" : "add amount",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/Transaction"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "string"
                }
              }
            }
          },
          "400" : {
            "description" : "failed",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "string"
                }
              }
            }
          }
        }
      }
    },
    
    
    "/provider/withdrawBalance" : {
      "summary" : "API to remove amount to the receiver account",
      "put" : {
        "summary" : "remove bank",
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/Transaction"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "success",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "string"
                }
              }
            }
          },
          "400" : {
            "description" : "failed",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "string"
                }
              }
            }
          }
        }
      }
    }
  },
  
  
  "components" : {
    "schemas" : {
      "User" : {
        "type" : "object",
        "properties" : {
          "national_id" : {
            "type" : "string"
          },
          "username" : {
            "type" : "string",
            "example" : "theUser"
          },
          "password" : {
            "type" : "string",
            "example" : "12345"
          },
          "channel" : {
          	"type" : "string",
          	"example" : "wallet"
          },
          "acc_number" : {
            "type" : "string"
          },
          "card_number" : {
            "type" : "string"
          },
          "wallet_number" : {
            "type" : "string"
          },
          "phone" : {
            "type" : "string",
            "example" : "12345"
          },
          "acc_balance" : {
           	"type" : "integer",
           	"minimum" : 0
          },
          "card_balance" : {
           	"type" : "integer",
           	"minimum" : 0
          },
          "wallet_balance" : {
           	"type" : "integer",
           	"minimum" : 0
          }
        },
        "xml" : {
          "name" : "user"
        }
      },
      
      
      "Transaction" : {
        "type" : "object",
        "properties" : {
          "sender_ID" : {
            "type" : "string"
          },
          "receiver_ID" : {
            "type" : "string"
          },
          "sender_name" : {
            "type" : "string",
            "example" : "ahmed"
          },
          "receiver_name" : {
            "type" : "string",
            "example" : "yasser"
          },
          "sender_channel" : {
          	"type" : "string",
          	"example" : "wallet"
          },
          "receiver_channel" : {
          	"type" : "string",
          	"example" : "wallet"
          },
          
          "sender_acc_number" : {
            "type" : "string"
          },
          "sender_card_number" : {
            "type" : "string"
          },
          "sender_wallet_number" : {
            "type" : "string"
          },
          "receiver_acc_number" : {
            "type" : "string"
          },
          "receiver_card_number" : {
            "type" : "string"
          },
          "receiver_wallet_number" : {
            "type" : "string"
          },
          
          "provider_bank" : {
            "type" : "string",
            "example" : "CIB"
          },
          "acquirer_bank" : {
            "type" : "string",
            "example" : "QNB"
          },
          "amount" : {
            "type" : "number",
            "minimum" : 0
          },
          "date_time" : {
            "type" : "string",
            "example" : "1-9-2022 6.00PM" 
          }
          
        },
        "xml" : {
          "name" : "transaction"
        }
      }
    }
  }
}